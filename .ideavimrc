" Load vim configs
source ~/.vimrc

" Plugins
set NERDTree
set commentary
set surround
set ideajoin
set multiple-cursors
set highlightedyank

" Enable native idea paste action for put operations
set clipboard+=ideaput

" Disable bells
set visualbell

" Fast reload .ideavimrc
map <leader>si   :source ~/.ideavimrc<CR>

" Keymaps
nmap <C-i>          <Action>(Back)
nmap <C-o>          <Action>(Forward)

nmap <Leader>p      <Action>(SearchEverywhere)
nmap <Leader>f      <Action>(FindInPath)
nmap <Leader>r      <Action>(RenameElement)
nmap <Leader>R      <Action>(RenameInPath)
nmap <Leader>a      <Action>(ShowIntentionActions)
nmap <Leader>d      <Action>(QuickJavaDoc)
nmap <Leader>v      <Action>(ShowErrorDescription)

nmap <C-n>          <Plug>NextWholeOccurrence
xmap <C-n>          <Plug>NextWholeOccurrence
nmap <C-x>          <Plug>SkipOccurrence
xmap <C-x>          <Plug>SkipOccurrence
nmap <C-p>          <Plug>RemoveOccurrence
xmap <C-p>          <Plug>RemoveOccurrence
nmap <S-C-n>        <Plug>AllWholeOccurrences
xmap <S-C-n>        <Plug>AllWholeOccurrences

map <Leader><Tab>   <Action>(PreviousTab)
map <Tab>           <Action>(NextTab)

nmap <A-j>          <Action>(MoveStatementDown)
nmap <A-k>          <Action>(MoveStatementUp)
vmap <A-j>          <Action>(MoveStatementDown)
vmap <A-k>          <Action>(MoveStatementUp)

nmap <C-A-j>        <Action>(EditorCloneCaretBelow)
nmap <C-A-k>        <Action>(EditorCloneCaretAbove)

nmap gd             <Action>(GotoDeclarationOnly)
nmap gi             <Action>(GotoImplementation)

nmap gcc            <Action>(CommentByLineComment)
vmap gcc            <Action>(CommentByLineComment)<Esc>
vmap gbc            <Action>(CommentByBlockComment)<Esc>

nmap <Leader>ww     <Action>(HideAllWindows)

" Plugins Keymaps
nmap <Leader>e      :NERDTreeFocus<CR>
